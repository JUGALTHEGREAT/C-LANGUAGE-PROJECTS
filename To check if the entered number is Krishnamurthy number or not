#include<stdio.h>
main()
{
	int n,x=0,r=0,a,c,s=0,f,i;
	printf("\n Enter no==>");
	scanf("%d",&n);
	c=n;
	while(n>0)
	{
	r=n%10;
    f=1;
    for(i=1;i<=r;i++)
    	{
    		f=f*i;
		}
    x=x+f;
    n=n/10;
		
	}
	
     if(x==c)
     {
     	printf("%d is KRISHNAMURHTY NUMBER",c);
	 }
	 else
	 {
	 	printf("%d is not KRISHNAMURTHY NUMBER",c);
	 }
	
}
