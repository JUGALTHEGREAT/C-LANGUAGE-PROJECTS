#include<stdio.h>
main()
{
   int i,r,j,k;
   printf("\n Enter number of rows==>");
   scanf("%d",&r);
   k=r;
   
   for(i=1;i<=r;i++)
   {
   	
   	for(j=r;j>=i;j--)
   	{
   	  printf("*");
   	  
   	}
   	printf("\n");
   	 
    }
      
   for(i=1;i<=r;i++)
   {
   	for(j=1;j<=i;j++)
   	{
   	  printf("*",j);
   	}
   	printf("\n");
   	 
    }
   
	   
}
